# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://swedencentral.api.cognitive.microsoft.com/
AZURE_OPENAI_DEPLOYMENT=gpt-5-chat-deployment
AZURE_OPENAI_API_VERSION=2024-08-01-preview

# Local Storage
INPUT_PATH=./data/input
OUTPUT_PATH=./data/output
DATABASE_PATH=./data/reports.db
CACHE_PATH=./data/cache

# Application Settings
LOG_LEVEL=INFO
ENABLE_CACHE=true
MAX_RETRIES=3
TIMEOUT_SECONDS=120

# Extraction Parameters
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=16000
CONFIDENCE_THRESHOLD=0.7

# Azure AD / EntraID Authentication (Backend)
# Set AZURE_AD_ENABLED=false to disable authentication for testing without Azure AD
AZURE_AD_ENABLED=true
AZURE_AD_TENANT_ID=your-tenant-id-here
AZURE_AD_CLIENT_ID=your-backend-app-client-id-here
AZURE_AD_AUDIENCE=api://your-backend-app-client-id-here
# Optional: Comma-separated list of Azure AD group object IDs for authorization
# AZURE_AD_ALLOWED_GROUPS=group-id-1,group-id-2
